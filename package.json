{
  "name": "helios-deployer",
  "version": "1.4.0",
  "description": "Deploy and interact with smart contracts on the Helios testnet.",
  "scripts": {
    "cleanup": "node scripts/cleanup-environment.js",
    "deploy": "npx hardhat deploy --network heliosTestnet",
    "deploy:token": "npx hardhat deploy --log-name RandomToken --network heliosTestnet",
    "deploy:nft": "npx hardhat deploy --log-name RandomNFT --network heliosTestnet",
    "deploy:agent": "npx hardhat deploy --log-name AIAgent --network heliosTestnet",
    "deploy:fee": "npx hardhat deploy --log-name FeeCollector --network heliosTestnet",
    "deploy:reporter": "npx hardhat deploy --log-name DailyReporter --network heliosTestnet",
    "deploy:hyperion": "npx hardhat deploy --log-name HyperionQuery --network heliosTestnet",
    "deploy:heartbeat": "npx hardhat deploy --log-name Heartbeat --network heliosTestnet",
    "interact": "npx hardhat run scripts/scripts/interact.js --network heliosTestnet",
    "verify:prepare": "node scripts/prepare-verification.js"
  },
  "keywords": [
    "helios",
    "token",
    "hardhat",
    "deployment",
    "smart-contracts",
    "ai",
    "cron"
  ],
  "author": "azrim89",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "latest",
    "cross-env": "latest",
    "dotenv": "latest",
    "hardhat": "latest"
  },
  "dependencies": {
    "@openzeppelin/contracts": "latest"
  }
}